{% extends 'mabase.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<h1 align="center">Inscription sur le site </h1>
<div align="center">
    {{form_start(form) }}
    {{form_row(form.username,{'attr':{'placeholder':'username'}} )}}<br>
    {{form_row(form.email,{'attr':{'placeholder':'Adress email'} })}}<br>
    {{form_row(form.password,{'attr':{'placeholder':'password'}} )}}<br>
    {{form_row(form.confirm_password,{'attr':{'placeholder':'confirmer votre password '} })}}<br>
    <button type="submit" class="btn.btn-success">Inscription</button>
    {{form_end(form) }}
</div>
{% endblock %}
